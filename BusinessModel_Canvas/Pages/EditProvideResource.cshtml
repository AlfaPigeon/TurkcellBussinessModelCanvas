@page
@model BusinessModel_Canvas.Pages.EditProvideResourceModel
@{
    ViewData["Title"] = "EditProvideResource";
    Layout = "~/Pages/Shared/PopupLayout.cshtml";
}


<div id="general-info" class="col" style="height:100%">



    <div class="input-group input-group-prepend" style="margin-top:10px">
        <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Provider</span>
        <div style="margin-left: 5px;margin-right:0px; font-size: 20px;width: 45%;">
            <h3>@Model.GetServiceName()</h3>
        </div>
    </div>
    <div class="input-group input-group-prepend" style="margin-top:10px">
        <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Service</span>
        <div style="margin-left: 5px;margin-right:0px; font-size: 20px;width: 45%;">
            <h3>@Model.GetResourceName()</h3>
        </div>
    </div>

    <div id="providing-reason" class="input-group input-group-lg">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Provide Description</span>
        </div>
        <textarea id="Description" type="text" class="form-control-plaintext" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" style="height:20vh;border:groove;resize:none;font-size:15px">@Model.GetReason()</textarea>
    </div>



    <button type="button" class="btn btn-info btn-lg" style="margin-top:10px;font-size:20px;" onclick="EditProvider();">Submit</button>
</div>

@section scripts{
    <script>
        function EditProvider() {


            var data = { Id: "@Model.GetRelationID()", Description: $("#Description").val() };


            $.post("api/ProvidesResource/Edit/", data, function (nData) {
                window.opener.SetResourceDescription();
                window.close();
            });



        }
    </script>
}


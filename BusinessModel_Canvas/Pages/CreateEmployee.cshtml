@page
@model BusinessModel_Canvas.Pages.CreateEmployeeModel
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Pages/Shared/PopupLayout.cshtml";
}
<div id="general-info" class="col" style="height:100%">



    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Name</span>
        </div>
        <input id="Name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>

    <div class="input-group input-group-prepend" style="margin-top:10px">
        <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Firm</span>
        <div style="margin-left:0px;margin-right:0px; font-size: 20px;width: 45%;">
            <select class="firm-select" style="width: 100%;">
                <option value="null" selected>Works For</option>
                @foreach (var firm in Model.GetAllFirms())
                {
                    <option value="@firm.Item1">@firm.Item2</option>
                }
            </select>

        </div>

        <button type="button" class="btn btn-secondary btn-lg" style="font-size:20px;" onclick="">Create</button>

    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Position</span>
        </div>
        <input id="Position" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>



    <div class="input-group input-group-lg">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Expectance Description</span>
        </div>
        <textarea id="Description" type="text" class="form-control-plaintext" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" style="height:20vh;border:groove;resize:none;font-size:15px"></textarea>
    </div>


    <div class="input-group input-group-lg">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Interests</span>
        </div>
        <textarea id="Interests" type="text" class="form-control-plaintext" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" style="height:20vh;border:groove;resize:none;font-size:15px"></textarea>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">School Graduated</span>
        </div>
        <input id="School" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Birth Date</span>
        </div>
        <input id="BirthDate" type="date" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Birth Place</span>
        </div>
        <input id="BirthPlace" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Married?/Partner Name</span>
            <div class="input-group-text">
                <input id="IsMarried" onclick="$('#Significant').prop('disabled', !$(this).is(':checked'))" type="checkbox" aria-label="Checkbox for following text input">
            </div>
        </div>
        <input id="Significant" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px" disabled>
    </div>

    <div id="child-list">
        <div class="input-group mb-3 child-input">
            <div class="input-group-prepend">
                <span class="input-group-text child-title" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Child#1 Name</span>
            </div>
            <input oninput="AddChild(this)" id="Name" type="text" class="form-control child" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
        </div>
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Support Level</span>
        </div>
        <input value="0" id="Support-number" oninput="$('#Support-range').val($(this).val())" type="number" class="custom-range" min="0" max="5" style="font-size: 20px;height: auto;width: 6%;text-align: right;">
        <input value="0" id="Support-range" oninput="$('#Support-number').val($(this).val())" type="range" class="custom-range" min="0" max="5" style="height:auto">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Office Phone</span>
        </div>
        <input id="OfficePhone" type="text" maxlength="11" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Cell Phone</span>
        </div>
        <input id="CellPhone" type="text" maxlength="11" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="height:100%;border:groove;font-size:20px">
    </div>
    <div class="input-group input-group-lg">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Office Address</span>
        </div>
        <textarea id="OfficeAddress" type="text" class="form-control-plaintext" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" style="height:20vh;border:groove;resize:none;font-size:15px"></textarea>
    </div>
    <div class="input-group input-group-lg">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">Home Address</span>
        </div>
        <textarea id="HomeAddress" type="text" class="form-control-plaintext" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" style="height:20vh;border:groove;resize:none;font-size:15px"></textarea>
    </div>


    <button type="button" class="btn btn-info btn-lg" style="margin-top:10px;font-size:20px;" onclick="CreateEmployee();">Submit</button>
</div>

@section scripts{
    <script>
        function CreateEmployee() {

            if ($("#Name").val() == "") {
                alert("İsim alanını doldurmak zorunludur.")
                return;
            }

            var children = [];
            $(".child").each(function (i, e) { if ($(e).val() != "") children.push($(e).val()); });
            var data = {
                Id: '00000000-0000-0000-0000-000000000000',
                Name: $("#Name").val() == "" ? null : $("#Name").val(),
                Description: $("#Description").val() == "" ? null : $("#Description").val(),
                Position: $("#Position").val() == "" ? null : $("#Position").val(),
                School: $("#School").val() == "" ? null : $("#School").val(),
                Significant: $("#Significant") == "" ? null : $("#Significant").val(),
                BirthPlace: $("#BirthPlace").val() == "" ? null : $("#BirthPlace").val(),
                BirthDate: ($("#BirthDate").val().length == 0) ? null : $("#BirthDate").val(),
                IsMarried: $("#IsMarried").is(':checked') ? true : false,
                Children: children,
                Interests: $("#Interests").val() == "" ? null : $("#Interests").val(),
                Support: $("#Support-range").val(),
                CellPhone: $("#CellPhone").val() == "" ? null : $("#CellPhone").val(),
                OfficePhone: $("#OfficePhone").val() == "" ? null : $("#OfficePhone").val(),
                OfficeAddress: $("#OfficeAddress").val() == "" ? null : $("#OfficeAddress").val(),
                HomeAddress: $("#HomeAddress").val() == "" ? null : $("#HomeAddress").val()
            };

            $.post("api/Employee/", data, function (element) {

                if ($(".firm-select").val() != "null") {
                    $.post("api/Employee/Add/ToFirm/" + $(".firm-select").val() + "/" + element['id']);
                }

                window.opener.location.reload(false);
                window.close();
            });
        }

        function AddChild(child) {
            if ($(child).val() == "" && $(".child-input").length > 1) {
                $(child.closest(".child-input")).remove();
                $(".child-title").each(function (i, s) { $(s).html('Child#' + (i + 1) + ' Name') });
            }
            var check = false;
            $(".child").each(function (i, s) { if ($(s).val() == "") check = true });
            if (!check) {
                var data =
                    ' <div class="input-group mb-3 child-input" ><div class="input-group-prepend">' +
                    '<span class="input-group-text child-title" id="inputGroup-sizing-default" style="background-color: #2b64a0;color: white;font-size: 20px;width: 230px;">' +
                    '</span>' +
                    '</div><input oninput="AddChild(this)" id="Name" type="text" class="form-control child" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"' +
                    'style="height:100%;border:groove;font-size:20px" ></div>';

                $("#child-list").append(data);
                $(".child-title").each(function (i, s) { $(s).html('Child#' + (i + 1) + ' Name') });
            }
        }



    </script>
}
